<h1>New Game</h1>
<ul id="@game_tiles" type="hidden">
  <% @sample.each do |letter|%>
    <li style="display:inline" class="game_tiles"><%= letter %></li>
  <% end %>
</ul>

<form action="/score">
  <label for="users_guess">What is the longest word you can find?</label><br>
  <input type="text" name="users_guess" id="users_guess"><br>
  <input type="submit" value="Submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :game_tiles, @sample %>
</form>
